{
  "name": "omnimind-ai-platform",
  "version": "1.0.0",
  "description": "AI-powered productivity assistant platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "nodemon server/index.js",
    "dev:full": "concurrently -n 'FRONTEND,BACKEND' -c 'blue,green' \"npm run dev\" \"npm run server\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress open",
    "test:e2e:run": "cypress run",
    "lint": "eslint src server --ext .js,.jsx",
    "lint:fix": "eslint src server --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\" \"server/**/*.js\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "seed": "node scripts/seed.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "axios": "^1.3.0",
    "date-fns": "^2.30.0",
    "react-icons": "^4.8.0",
    "chart.js": "^4.2.1",
    "react-chartjs-2": "^5.2.0",
    "react-hook-form": "^7.43.0",
    "react-hot-toast": "^2.4.0",
    "zustand": "^4.3.0",
    "framer-motion": "^10.0.0",
    "express": "^4.18.0",
    "mongoose": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.0",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "dotenv": "^16.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "crypto-js": "^4.1.1",
    "nodemailer": "^6.9.0",
    "winston": "^3.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^4.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "jest": "^29.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "cypress": "^12.0.0",
    "concurrently": "^8.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}